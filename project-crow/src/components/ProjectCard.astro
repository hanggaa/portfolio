---
// src/components/ProjectCard.astro
export interface Props {
  title: string;
  description: string;
  tags: string[];
  imgSrc: string;
  liveUrl?: string; // Tanda tanya (?) berarti properti ini opsional
  githubUrl?: string;
}

const { title, description, tags, imgSrc, liveUrl, githubUrl } = Astro.props;
---
<div class="bg-brand-surface border border-brand-outline rounded-lg overflow-hidden transform hover:-translate-y-2 transition-transform duration-300">
  <img src={imgSrc} alt={`Screenshot of ${title}`} class="w-full h-48 object-cover">

  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-brand-text-secondary mb-4 text-sm leading-relaxed">{description}</p>

    <div class="flex flex-wrap gap-2 mb-4">
      {tags.map(tag => (
        <span class="bg-brand-surface text-brand-primary text-xs font-semibold px-2.5 py-1 rounded-full">{tag}</span>
      ))}
    </div>
  </div>

  <div class="border-t border-brand-outline p-4 flex justify-end items-center space-x-4">
    {githubUrl && (
      <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="text-brand-text-secondary hover:text-brand-text-primary transition-colors" title="Source Code">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path></svg>
      </a>
    )}
    {liveUrl && (
      <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="text-brand-text-secondary hover:text-brand-text-primary transition-colors" title="Live Demo">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
      </a>
    )}
  </div>
</div>