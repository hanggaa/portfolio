---
// src/components/Navbar.astro
import ThemeToggle from './ThemeToggle.astro';
---
<header class="fixed top-0 left-0 w-full p-4 z-50 bg-brand-surface/80 dark:bg-brand-surface/80 backdrop-blur-sm transition-colors duration-300 border-b border-brand-outline dark:border-brand-outline">
  <nav class="container mx-auto flex justify-between items-center">
    <a href="/" class="h-10 w-10">
      <img src={`${import.meta.env.BASE_URL}Rvn.png`} alt="Logo Gagak" class="h-full w-full object-contain" />
    </a>
    
    <div class="flex items-center space-x-6">
      <ul class="hidden md:flex space-x-8 text-brand-text-secondary dark:text-brand-text-secondary font-medium">
        <li><a href="#about" class="hover:text-brand-primary dark:hover:text-brand-primary transition-colors">About</a></li>
        <li><a href="#playground" class="hover:text-brand-primary dark:hover:text-brand-primary transition-colors">Playground</a></li>
        <li><a href="#certificates" class="hover:text-brand-primary dark:hover:text-brand-primary transition-colors">Certificates</a></li>
        <li><a href="#contact" class="hover:text-brand-primary dark:hover:text-brand-primary transition-colors">Contact</a></li>
      </ul>
      <ThemeToggle />
    </div>
  </nav>
</header>